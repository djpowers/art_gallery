<h1>Pages#index</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Total Amount Spent</th>
      <th>Favorite Collections</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.total_amount_spent %></td>
        <% customer.favorite_collections.each do |col| %>
        <td><%=  "#{col}" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
